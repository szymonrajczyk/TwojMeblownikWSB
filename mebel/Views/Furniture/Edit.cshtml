@{
}

<form method="post" asp-action="Edit">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Nazwa</label>
        <input asp-for="Name" class="form-control" placeholder="Zmień nazwę">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tag">Opis</label>
        <input asp-for="Tag" class="form-control" placeholder="Zmień opis">
        <span asp-validation-for="Tag" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Link do zdjęcia</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Zmień link do zdjęcia">
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Cena</label>
        <input type="number" step="0.01" min="0" asp-for="Price" class="form-control" placeholder="Zmień cenę">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Zaktualizuj</button>
</form>
