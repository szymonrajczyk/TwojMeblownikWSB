@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Twój Meblownik</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mebel.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Furniture" asp-action="Index">TWÓJ MEBLOWNIK</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (SignInManager.IsSignedIn(User))
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Furniture" asp-action="MyFurniture">
                                <span class="h6 mb-0">Moje Meble</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Furniture" asp-action="Create">
                                <span class="h6 mb-0">Dodaj Mebel</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item alert-danger" asp-area="" asp-controller="Account" asp-action="Delete">
                                <span class="h6 mb-0">Usuń konto wraz ze swoimi meblami</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                <span class="h6 mb-0">Wyloguj się</span>
                            </a>
                        </li>
                    </ul>

                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Account" asp-action="Register">Zarejestruj się</a>
                            <span>&nbsp;lub&nbsp;</span>
                            <a asp-area="" asp-controller="Account" asp-action="Login">Zaloguj się</a>
                        </li>
                    </ul>
                }

            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Twój Meblownik - Hubert Bałuszyński, Szymon Rajczyk - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

